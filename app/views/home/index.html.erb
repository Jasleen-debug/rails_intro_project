<%= form_with(url:search_books_path,method: :get, local:true) do %>
<div class="row g-2 p-4">
  <div class="col-10">
    <%= text_field_tag(:keywords, nil, class: "form-control", type:"text", placeholder: 'Search for Books')%>
  </div>
  <div class="col-2">
    <%= submit_tag("Search", class: "btn btn-primary ") %>
  </div>
</div>
<% end %>
<div class="container overflow-hidden p-4">
  <div class="row gx-5">
    <div class="col">
     <div class="p-3 border bg-light">Books</div>
        <ul class="list-group">
          <% @books.each do | book | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to (truncate book.title), book %>
        	</li>
      	<% end %>
        </ul>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">Publishers</div>
        <ul class="list-group">
          <% @publishers.each do | publisher | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to publisher.name, publisher %>
            <em>(<%= publisher.book_count %> Books)</em>
        	</li>
      	<% end %>
        </ul>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">Authors</div>
        <ul class="list-group">
          <% @publishers.each do | publisher | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to publisher.name, publisher %>
            <em>(<%= publisher.book_count %> Books)</em>
        	</li>
      	<% end %>
        </ul>
    </div>
  </div>
</div>