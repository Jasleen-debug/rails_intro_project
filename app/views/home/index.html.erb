<div class="container overflow-hidden p-4">
  <div class="row gx-5">
    <div class="col">
     <div class="p-3 border bg-light">Books</div>
        <ul class="list-group">
          <% @books.each do | book | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to (truncate book.title), book %>
        	</li>
      	<% end %>
        </ul>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">Publishers</div>
        <ul class="list-group">
          <% @publishers.each do | publisher | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to publisher.name, publisher %>
            <em>(<%= publisher.book_count %> Books)</em>
        	</li>
      	<% end %>
        </ul>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">Authors</div>
        <ul class="list-group">
          <% @publishers.each do | publisher | %>
        	<li class="list-group-item list-group-item-info">
          	<%= link_to publisher.name, publisher %>
            <em>(<%= publisher.book_count %> Books)</em>
        	</li>
      	<% end %>
        </ul>
    </div>
  </div>
</div>
