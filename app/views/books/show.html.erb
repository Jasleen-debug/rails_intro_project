<% content_for(:html_title) { @book.title } %>

  <div class="container">
    <div class="row">
      <div class="col-2">Book Title:</div>
      <div class="col-10"><%= @book.title %></div>
    </div>
    <div class="row">
      <div class="col-2">Publication Date:</div>
      <div class="col-4"><%= @book.publication_date %></div>
      <div class="col-2">ISBN:</div>
      <div class="col-4"><%= @book.isbn%> </div>
    </div>
    <div class="row">
      <div class="col-2">Total Pages:</div>
      <div class="col-4"><%= @book.num_pages%></div>
      <div class="col-2">Average Listing:</div>
      <div class="col-4"><%= @book.average_listing%></div>
    </div>
    <div class="row">
      <div class="col-2">Publisher:</div>
      <div class="col-8"><%= @book.publisher.name%></div>
    </div>
    <div class="row">
      <div class="col" style="background-color:yellow;">Authors: coming soon...</div>
    </div>
  </div>



