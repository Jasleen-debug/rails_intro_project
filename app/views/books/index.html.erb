<%= form_with(url:search_books_path,method: :get, local:true) do %>
  <div class="field is-grouped mb-5">
    <div class="control is-expanded">
      <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search for Books')%>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is-primary") %>
    </div>
  </div>
<% end %>
<h2 class="display-4"> Top GoodRead Books </h2>
<ol>
<% @books.each do | book | %>
<li><%= link_to book.title, book %> was published by <%= link_to book.publisher.name, book.publisher %> </li>
<% end %>
</ol>
<%= paginate @books %>